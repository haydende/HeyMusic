<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="20dp"
    android:clickable="true">

    <TextView
        android:id="@+id/songListItem.trackNum"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="N"
        android:textSize="12sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/songListItem.trackName"/>

    <TextView
        android:id="@+id/songListItem.trackName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="250dp"
        android:padding="10dp"
        android:text="@string/track_name"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/songListItem.trackNum"
        app:layout_constraintEnd_toStartOf="@id/songListItem.trackDuration"/>

    <TextView
        android:id="@+id/songListItem.trackDuration"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="50dp"
        android:padding="10dp"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/songListItem.trackName"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>