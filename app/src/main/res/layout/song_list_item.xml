<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="20dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/songListItem.trackNum"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="N"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/songListItem.trackName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="250dp"
        android:padding="10dp"
        android:text="@string/track_name"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/songListItem.trackNum"/>

    <TextView
        android:id="@+id/songListItem.trackDuration"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="00:00"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/songListItem.moreOptions"/>

    <ImageButton
        android:id="@+id/songListItem.moreOptions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:contextClickable="true"
        android:foreground="@drawable/ic_baseline_more_horiz_6"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>