<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GridActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1000"
        tools:listitem="@layout/album_item"
        tools:itemCount="2"/>

    <LinearLayout
        android:id="@+id/gridActivityButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="60dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/gridActivityButtons.artistButton"
            android:foreground="@drawable/ic_artist_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:minWidth="60dp"
            android:minHeight="60dp"/>
        <ImageButton
            android:id="@+id/gridActivityButtons.albumButton"
            android:foreground="@drawable/ic_album_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:minHeight="60dp"/>
        <ImageButton
            android:id="@+id/gridActivityButtons.songButton"
            android:foreground="@drawable/ic_song_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:minHeight="60dp"/>

    </LinearLayout>

</LinearLayout>

